<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <data>
        
        <template id="efarm_cert.external_layout">
            <t t-if="not o" t-set="o" t-value="doc"/>
            <t t-if="not company">
                <t t-if="company_id">
                    <t t-set="company" t-value="company_id"/>
                </t>
                <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                    <t t-set="company" t-value="o.company_id.sudo()"/>
                </t>
                <t t-else="else">
                    <t t-set="company" t-value="res_company"/>
                </t>
            </t>
            <t t-if="company.external_report_layout_id" t-call="{{company.external_report_layout_id.sudo().key}}">
                <t t-out="0"/>
            </t>
            <t t-else="else" t-call="efarm_cert.external_layout_standard">
                <t t-out="0"/>
            </t>
        </template>
        
        <template id="efarm_cert.external_layout_standard">
            <div t-attf-class="article o_report_layout_standard o_company_#{company.id}_layout {{  'o_layout_background' if company.layout_background in ['Geometric', 'Custom']  else  '' }}" t-attf-style="background-image: url({{ 'data:image/png;base64,%s' % company.layout_background_image.decode('utf-8') if company.layout_background_image and company.layout_background == 'Custom' else '/base/static/img/bg_background_template.jpg' if company.layout_background == 'Geometric' else ''}});" t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id" t-att-data-oe-lang="o and o.env.context.get('lang')">
                <t t-out="0"/>
            </div>
        </template>

        <template id="efarm_cert.head">
            <head>
                <link rel="preconnect" href="https://fonts.googleapis.com"/>
                <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin=''/>
                <link href="https://fonts.googleapis.com/css2?family=Scheherazade+New:wght@400;500;600;700&amp;display=swap" rel="stylesheet"/>
                <style>
                    @page {
                        margin: 0;
                    }
                    
                    body {
                        font-family: serif;
                        line-height: 1.6;
                        font-size: 17px;
                    }
                    
                    /* Main Certificate Container */
                    .certificate {
                        font-family: Arial, sans-serif;
                        padding: 60px 45px;
                    }
                    
                    /* Main Table */
                    .main-table {
                        width: 100%;
                        height: 150px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }
                    
                    /* Sub Tables */
                    .sub-table {
                        width: 100%;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }
                    
                    .sub-table-height-100 {
                        width: 100%;
                        height: 100px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }

                    .sub-table-height-110 {
                        width: 100%;
                        height: 110px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }

                    .sub-table-height-120 {
                        width: 100%;
                        height: 120px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }
                    
                    .sub-table-height-50 {
                        width: 100%;
                        height: 50px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }

                    .sub-table-height-55 {
                        width: 100%;
                        height: 55px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }
                    
                    .sub-table-height-58 {
                        width: 100%;
                        height: 58px;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }
                    
                    .sub-table-full-height {
                        width: 100%;
                        height: 100%;
                        border-collapse: collapse;
                        table-layout: fixed; /* Force fixed table layout */
                    }
                    
                    /* Layout Borders */
                    .layout-borders {
                        border: 3px solid transparent; /* Change to 'red' for debugging layout and return to transparent */
                    }
                    
                    /* Row Heights */
                    .row-h-15 { height: 15px; }
                    .row-h-20 { height: 20px; }
                    .row-h-30 { height: 30px; }
                    .row-h-45 { height: 45px; }
                    .row-h-50 { height: 50px; }
                    .row-h-60 { height: 60px; }
                    .row-h-80 { height: 80px; }
                    .row-h-90 { height: 90px; }
                    .row-h-100 { height: 100px; }
                    .row-h-145 { height: 145px; }
                    .row-h-260 { height: 260px; }
                    .row-h-full { height: 100%; }
                    
                    /* Cell Widths */
                    .cell-w-10 { width: 10% !important;}
                    .cell-w-15 { width: 15% !important; }
                    .cell-w-18 { width: 18% !important; }
                    .cell-w-20 { width: 20% !important; }
                    .cell-w-22 { width: 22% !important; }
                    .cell-w-23 { width: 23% !important; }
                    .cell-w-25 { width: 25% !important; }
                    .cell-w-30 { width: 30% !important; }
                    .cell-w-34 { width: 34% !important; }
                    .cell-w-35 { width: 35% !important; }
                    .cell-w-40 { width: 40% !important; }
                    .cell-w-45 { width: 45% !important; }
                    .cell-w-50 { width: 50% !important; }
                    .cell-w-55 { width: 55% !important; }
                    .cell-w-60 { width: 60% !important; }
                    .cell-w-65 { width: 65% !important; }
                    .cell-w-70 { width: 70% !important; }
                    .cell-w-75 { width: 75% !important; }
                    .cell-w-78 { width: 78% !important; }
                    .cell-w-80 { width: 80% !important; }
                    
                    /* Cell Styles */
                    .cell-standard {
                        padding: 0px;
                        vertical-align: top;
                    }
                    
                    /* Cell with centered value */
                    .cell-value {
                        vertical-align: middle;
                        text-align: center;
                        padding: 0px;
                        overflow: hidden; /* Prevent cell expansion */
                        position: relative;
                    }
                    
                    /* Field Value with text wrapping */
                    .field-value {
                        display: block;
                        word-wrap: break-word;
                        word-break: break-word;
                        overflow: hidden;
                        width: 100%;
                        line-height: 1.2;
                        font-weight: 600;
                        font-size: 18px;
                        color: #3044f8 !important; /* Removed alpha channel, added !important */
                        max-height: 2.4em; /* Limit to 2 lines (1.2 line-height Ã— 2) */
                        position: relative;
                        padding: 0 2px;
                    }

                    .field-padding {
                        padding: 0 20px;
                    }
                    
                    /* Single line ellipsis for specific fields */
                    .field-value-single {
                        white-space: nowrap;
                        overflow: hidden;
                        text-overflow: ellipsis;
                        display: inline-block;
                        max-width: 95%;
                        line-height: 1.2;
                        font-weight: 600;
                        font-size: 18px;
                        color: #3044f8 !important; /* Removed alpha channel, added !important */
                    }
                    
                    /* Multi-line with webkit line clamp (if supported) */
                    .field-value-multiline {
                        display: -webkit-box;
                        -webkit-line-clamp: 2;
                        -webkit-box-orient: vertical;
                        overflow: hidden;
                        word-wrap: break-word;
                        word-break: break-word;
                        line-height: 1.2;
                        font-weight: 600;
                        font-size: 18px;
                        color: #3044f8 !important; /* Removed alpha channel, added !important */
                        max-height: 2.4em;
                    }
                    
                    /* Arabic Text */
                    .field-arabic {
                        font-family: "Scheherazade New", serif;
                        font-weight: 700;
                    }
                    
                    /* Fixed Size Cells for Values - with overflow control */
                    .cell-fixed-small {
                        width: 100px !important;
                        max-width: 100px !important;
                        min-width: 100px !important;
                        overflow: hidden;
                    }
                    
                    .cell-fixed-medium {
                        width: 150px !important;
                        max-width: 150px !important;
                        min-width: 150px !important;
                        overflow: hidden;
                    }
                    
                    .cell-fixed-large {
                        width: 200px !important;
                        max-width: 200px !important;
                        min-width: 200px !important;
                        overflow: hidden;
                    }
                    
                    /* Container for long text cells */
                    .text-container {
                        width: 100%;
                        max-width: 100%;
                        overflow: hidden;
                        position: relative;
                        height: 100%;
                        display: table-cell;
                        vertical-align: middle;
                        text-align: center;
                    }
                    
                    /* Long text in main cells */
                    .cell-long-text {
                        max-width: 450px !important;
                        min-width: 450px !important;
                        width: 450px !important;
                        overflow: hidden;
                        word-wrap: break-word;
                        word-break: break-word;
                    }

                    .qr-verification-page {
                        padding: 60px 45px;
                        height: 100vh;
                        display: flex;
                        flex-direction: column;
                        font-family: Arial, sans-serif;
                    }
                    
                    .qr-header {
                        text-align: center;
                        margin-bottom: 40px;
                        padding-bottom: 30px;
                        border-bottom: 3px solid #2c5aa0;
                    }
                    
                    .qr-header h2 {
                        color: #2c5aa0;
                        font-size: 32px;
                        font-weight: bold;
                        margin: 0 0 10px 0;
                        text-transform: uppercase;
                        letter-spacing: 1px;
                    }
                    
                    .qr-header p {
                        color: #666;
                        font-size: 18px;
                        margin: 0;
                        font-style: italic;
                    }
                    
                    .qr-main-content {
                        flex: 1;
                        display: flex;
                        flex-direction: column;
                        align-items: center;
                        justify-content: center;
                    }
                    
                    .qr-container {
                        background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
                        padding: 40px;
                        border-radius: 20px;
                        box-shadow: 0 10px 40px rgba(0,0,0,0.1);
                        text-align: center;
                        position: relative;
                        margin-bottom: 30px;
                    }
                    
                    .qr-container::before {
                        content: '';
                        position: absolute;
                        top: -5px;
                        left: -5px;
                        right: -5px;
                        bottom: -5px;
                        background: linear-gradient(45deg, #2c5aa0, #4a90e2, #2c5aa0);
                        border-radius: 20px;
                        z-index: -1;
                    }
                    
                    .qr-code-wrapper {
                        background: white;
                        padding: 30px;
                        border-radius: 15px;
                        display: inline-block;
                        margin-bottom: 20px;
                        box-shadow: 0 5px 20px rgba(0,0,0,0.1);
                    }
                    
                    .qr-instructions {
                        background: white;
                        padding: 25px 40px;
                        border-radius: 10px;
                        box-shadow: 0 3px 15px rgba(0,0,0,0.08);
                    }
                    
                    .qr-instructions h3 {
                        color: #2c5aa0;
                        font-size: 20px;
                        margin: 0 0 15px 0;
                        font-weight: 600;
                    }
                    
                    .qr-instructions-list {
                        text-align: left;
                        margin: 15px 0;
                        padding: 0;
                        list-style: none;
                    }
                    
                    .qr-instructions-list li {
                        color: #555;
                        font-size: 15px;
                        line-height: 1.8;
                        padding-left: 30px;
                        position: relative;
                        margin-bottom: 10px;
                    }
                    
                    .qr-instructions-list li:before {
                        content: 'âœ“';
                        position: absolute;
                        left: 0;
                        color: #4a90e2;
                        font-weight: bold;
                        font-size: 18px;
                    }
                    
                    .verification-url {
                        background: #f8f9fa;
                        padding: 12px 20px;
                        border-radius: 8px;
                        margin-top: 20px;
                        border: 1px solid #e0e0e0;
                        word-break: break-all;
                    }
                    
                    .verification-url strong {
                        color: #2c5aa0;
                        display: block;
                        margin-bottom: 5px;
                        font-size: 14px;
                    }
                    
                    .verification-url span {
                        color: #666;
                        font-family: 'Courier New', monospace;
                        font-size: 13px;
                    }
                    
                    .qr-footer {
                        text-align: center;
                        padding-top: 30px;
                        margin-top: auto;
                    }
                    
                    .security-note {
                        display: inline-flex;
                        align-items: center;
                        background: #fff3cd;
                        color: #856404;
                        padding: 12px 25px;
                        border-radius: 8px;
                        font-size: 14px;
                        border: 1px solid #ffeaa7;
                    }
                    
                    .security-note svg {
                        width: 20px;
                        height: 20px;
                        margin-right: 10px;
                        fill: #856404;
                    }
                    
                    .certificate-info {
                        display: flex;
                        justify-content: center;
                        gap: 40px;
                        margin-bottom: 20px;
                    }
                    
                    .info-item {
                        text-align: center;
                    }
                    
                    .info-label {
                        color: #999;
                        font-size: 12px;
                        text-transform: uppercase;
                        letter-spacing: 1px;
                        margin-bottom: 5px;
                    }
                    
                    .info-value {
                        color: #2c5aa0;
                        font-size: 16px;
                        font-weight: bold;
                    }
                </style>
            </head>
        </template>


        <template id="efarm_cert.qr_page">
        
            <div class="qr-verification-page" dir="ltr" style="direction: ltr !important;">
            
                <div class="qr-header">
                    <h2>Certificate Verification</h2>
                    <p>Phytosanitary Certificate Authentication System</p>
                </div>
                
                <div class="qr-main-content">
                    <div class="certificate-info">
                        <div class="info-item">
                            <div class="info-label">Certificate Number</div>
                            <div class="info-value"><t t-esc="o.name"/></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Issue Date</div>
                            <div class="info-value"><t t-esc="o.certificate_issue_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/></div>
                        </div>
                        <div class="info-item">
                            <div class="info-label">Origin</div>
                            <div class="info-value"><t t-esc="o.place_of_origin.name"/></div>
                        </div>
                    </div>
                    
                    <div class="qr-container">
                        <div class="qr-code-wrapper">
                            <t t-set="verification_portal_url" t-value="request.env['ir.config_parameter'].sudo().get_param('web.base.url')"/>
                            <div t-out="verification_portal_url + '/cert/' + o.uuid" 
                                t-options="{'widget': 'barcode', 'symbology': 'QR', 'img_style': 'width:250px; height:250px;'}"/>
                        </div>
                    </div>
                    
                    <div class="qr-instructions" dir="ltr" style="direction: ltr !important; text-align: left;">
                        <h3 dir="ltr" style="direction: ltr !important; text-align: left;">How to Verify This Certificate</h3>
                        <ul class="qr-instructions-list">
                            <li>Scan the QR code above using any QR code reader</li>
                            <li>You will be directed to the official verification portal</li>
                            <li>View complete certificate details and authenticity status</li>
                        </ul>
                        
                        <div class="verification-url" dir="ltr" style="direction: ltr !important; text-align: left;">
                            <strong dir="ltr" style="direction: ltr; text-align: left;">Manual Verification URL:</strong>
                            <span dir="ltr" style="direction: ltr; text-align: left;"><t t-esc="verification_portal_url"/>/cert/<t t-esc="o.uuid"/></span>
                        </div>
                    </div>
                </div>
                
                <div class="qr-footer">
                    <div class="security-note">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                            <path d="M12 1L3 5v6c0 5.55 3.84 10.74 9 12 5.16-1.26 9-6.45 9-12V5l-9-4z"/>
                        </svg>
                        This certificate is digitally secured and protected against tampering
                    </div>
                </div>
            </div>

            <!-- Page Break for Second Page -->
            <div style="page-break-after: always;"></div>

        </template>


    </data>
</odoo>