<?xml version='1.0' encoding='utf-8'?>
<odoo>
    <template id="phytosanitary_certificate_report">
        <t t-call="web.html_container">
            <t t-call="efarm_cert.external_layout">
                <t t-call="efarm_cert.head"/>
                <t t-foreach="docs" t-as="o">
                    <img src="/efarm_cert/static/src/img/certificate_template.jpg" width="1000px" height="1430px" style="position: absolute; z-index: -100; opacity: 0;"/>
                    <div class="certificate" dir="ltr" style="direction: ltr !important;">
                        <table class="main-table">
                            <!-- Row 1 -->
                            <tr class="row-h-60 layout-borders">
                                <td class="cell-w-50 cell-standard layout-borders"></td>
                                <td class="cell-w-50 cell-standard layout-borders"></td>
                            </tr>
                            
                            <!-- Row 2 -->
                            <tr class="row-h-90 layout-borders">
                                <td class="cell-w-50 cell-value cell-long-text layout-borders">
                                    <div class="text-container">
                                        <span class="field-value field-padding">
                                            <t t-esc="o.exporter_name.name"/><br/>
                                            <t t-esc="o.exporter_name.address"/>
                                        </span>
                                    </div>
                                </td>
                                <td class="cell-w-50 cell-standard layout-borders"></td>
                            </tr>

                            <!-- Row 3 -->
                            <tr class="row-h-60 layout-borders">
                                <td class="cell-w-50 cell-standard layout-borders"></td>
                                <td class="cell-w-50 cell-standard layout-borders" rowspan="2">
                                    <table class="sub-table">
                                        <tr class="row-h-45 layout-borders"></tr>
                                        <tr class="row-h-45 layout-borders">
                                            <td class="cell-w-60 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value"><t t-esc="o.to_protection_organization.name"/></span>
                                            </td>
                                            <td class="cell-w-40 cell-standard layout-borders"></td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- Row 4 -->
                            <tr class="row-h-90 layout-borders">
                                <td class="cell-w-50 cell-value cell-long-text layout-borders">
                                    <div class="text-container">
                                        <span class="field-value field-padding">
                                            <t t-esc="o.consignee_name.name"/><br/>
                                            <t t-esc="o.consignee_name.address"/>
                                        </span>
                                    </div>
                                </td>
                            </tr>

                            <!-- Row 5 -->
                            <tr class="row-h-90 layout-borders">
                                <td class="cell-w-50 cell-standard layout-borders">
                                    <table class="sub-table">
                                        <tr class="row-h-20 layout-borders"></tr>
                                        <tr class="row-h-45 layout-borders">
                                            <td class="cell-w-55 cell-standard layout-borders"></td>
                                            <td class="cell-w-45 cell-value cell-fixed-small layout-borders">
                                                <span class="field-value">
                                                    <t t-esc="o.means_of_conveyance.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="cell-w-50 cell-standard layout-borders">
                                    <table class="sub-table">
                                        <tr class="row-h-60 layout-borders"></tr>
                                        <tr class="row-h-30 layout-borders">
                                            <td class="cell-w-45 cell-standard layout-borders"></td>
                                            <td class="cell-w-55 cell-value cell-fixed-medium layout-borders" style="text-align: left;">
                                                <span class="field-value">
                                                    <t t-esc="o.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- Row 6 -->
                            <tr class="row-h-90 layout-borders">
                                <td class="cell-w-50 cell-standard layout-borders">
                                    <table class="sub-table">
                                        <tr class="row-h-15 layout-borders"></tr>
                                        <tr class="row-h-45 layout-borders">
                                            <td class="cell-w-40 cell-standard layout-borders"></td>
                                            <td class="cell-w-60 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value">
                                                    <t t-esc="o.point_of_entry.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="cell-w-50 cell-standard layout-borders">
                                    <table class="sub-table">
                                        <tr class="row-h-15 layout-borders"></tr>
                                        <tr class="row-h-45 layout-borders">
                                            <td class="cell-w-40 cell-standard layout-borders"></td>
                                            <td class="cell-w-60 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value">
                                                    <t t-esc="o.place_of_origin.name"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- Row 7 -->
                            <tr class="row-h-260 layout-borders">
                                <td class="row-h-30 layout-borders" colspan="2">
                                    <table class="sub-table-full-height">
                                        <tr class="row-h-80 layout-borders"></tr>
                                        <tr class="row-h-full layout-borders">
                                            <td class="cell-w-20 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value"><t t-esc="o.produce_name.name"/></span>
                                            </td>
                                            <td class="cell-w-15 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value"><t t-esc="o.botanical_name.name"/></span>
                                            </td>
                                            <td class="cell-w-20 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value"><t t-esc="o.packages_number_description"/></span>
                                            </td>
                                            <td class="cell-w-20 cell-value cell-fixed-medium layout-borders">
                                                <span class="field-value"><t t-esc="o.distinguishing_marks"/></span>
                                            </td>
                                            <td class="cell-w-18 cell-value cell-fixed-small layout-borders">
                                                <span class="field-value">(<t t-esc="o.quantity_declared"/>)<br/><t t-esc="o.quantity_uom.name"/></span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- Row 8 -->
                            <tr class="row-h-145 layout-borders">
                                <td class="layout-borders" colspan="2"></td>
                            </tr>

                            <!-- Row 9 -->
                            <tr class="row-h-100 layout-borders">
                                <td class="layout-borders" colspan="2">
                                    <table class="sub-table-height-100">
                                        <tr class="row-h-full layout-borders">
                                            <td class="cell-w-22 cell-value layout-borders"></td>
                                            <td class="cell-w-78 cell-value cell-long-text layout-borders">
                                                <div class="text-container">
                                                    <span class="field-value"><t t-esc="o.additional_declaration"/></span>
                                                </div>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>

                            <!-- Row 10 -->
                            <tr class="row-h-260 layout-borders">
                                <td class="cell-w-50 cell-standard layout-borders">
                                    <table class="sub-table-height-50">
                                        <tr class="layout-borders">
                                            <td class="layout-borders"></td>
                                        </tr>
                                    </table>
                                    <table class="sub-table-height-50">
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-20"></td>
                                            <td class="layout-borders cell-w-80 cell-value cell-fixed-medium">
                                                <span class="field-value"><t t-esc="o.disinfection_treatment_type.name"/></span>
                                            </td>
                                        </tr>
                                    </table>
                                    <table class="sub-table-height-50">
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-50 cell-value">
                                                <span class="field-value">
                                                    <t t-esc="o.disinfection_chemical_ingredient.name"/>
                                                </span>
                                            </td>
                                            <td class="layout-borders cell-w-40"></td>
                                            <td class="layout-borders cell-w-10 cell-value">
                                                <span class="field-value">
                                                    <t t-esc="o.disinfection_duration_and_temperature"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                    <table class="sub-table-height-50">
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-35"></td>
                                            <td class="layout-borders cell-w-35 cell-value">
                                                <span class="field-value">
                                                    <t t-esc="o.disinfection_concentration"/>
                                                </span>
                                            </td>
                                            <td class="layout-borders cell-w-23"></td>
                                            <td class="layout-borders cell-w-18 cell-value">
                                                <span class="field-value">
                                                    <t t-esc="o.disinfection_date" t-options="{'widget': 'date', 'format': 'dd/MM'}"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                    <table class="sub-table-height-58">
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-40"></td>
                                            <td class="layout-borders cell-w-60 cell-value">
                                                <span class="field-value">
                                                    <t t-esc="o.disinfection_additional_info"/>
                                                </span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                                <td class="cell-w-50 cell-standard layout-borders">
                                    <table class="sub-table-height-110">
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-30"></td>
                                            <td class="layout-borders cell-w-70 cell-value cell-fixed-large">
                                                <span class="field-value"><t t-esc="o.certificate_place_of_issue.name"/></span>
                                            </td>
                                        </tr>
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-30"></td>
                                            <td class="layout-borders cell-w-70 cell-value cell-fixed-large">
                                                <span class="field-value"><t t-esc="o.certificate_issue_date" t-options="{'widget': 'date', 'format': 'dd/MM/yyyy'}"/></span>
                                            </td>
                                        </tr>
                                    </table>
                                    <table class="sub-table-height-50">
                                        <tr class="layout-borders">
                                            <td class="layout-borders cell-w-40"></td>
                                            <td class="layout-borders cell-w-60 cell-value cell-fixed-large">
                                                <span class="field-value field-arabic"><t t-esc="o.create_uid.name"/></span>
                                            </td>
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <!-- Page Break for Second Page -->
                    <div style="page-break-after: always;"></div>

                    <t t-call="efarm_cert.qr_page"/>

                </t>
            </t>
        </t>
    </template>
</odoo>