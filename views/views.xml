<odoo>
	<data>
		<record id="action_phytosanitary_certificate" model="ir.actions.act_window">
			<field name="name">Phytosanitary Certificate</field>
			<field name="res_model">phytosanitary.certificate</field>
			<field name="view_mode">tree,form</field>
		</record>

		<!-- Exporter Action -->
		<record id="action_phytosanitary_exporter" model="ir.actions.act_window">
			<field name="name">Exporters</field>
			<field name="res_model">phytosanitary.exporter</field>
			<field name="view_mode">tree</field>
			<field name="view_id" ref="view_phytosanitary_exporter_tree"/>
			<field name="help" type="html">
				<p class="o_view_nocontent_smiling_face">
					Create your first Exporter
				</p>
				<p>
					Manage exporters who will be issuing phytosanitary certificates.
				</p>
			</field>
		</record>

		<!-- Consignee Action -->
